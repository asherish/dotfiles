#!/bin/bash
# hash: {{ include ".chezmoiscripts/linux/run_onchange_before_02-install-mise.sh.tmpl" | sha256sum }}
set -euo pipefail

echo "Installing mise..."

MISE_BIN="$HOME/.local/bin/mise"

if [ ! -f "$MISE_BIN" ]; then
    curl https://mise.run | sh
else
    echo "mise is already installed."
fi

chmod +x "$MISE_BIN"

